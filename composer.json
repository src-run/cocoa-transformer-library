{
  "name": "src-run/cocoa-transformer-library",
  "license": "MIT",
  "type": "library",
  "homepage": "https://src.run/cocoa-transformer-library",
  "description": "Core exception class implementations with advanced context information and built-in string replacement functionality.",
  "support": {
    "email": "rmf@src.run",
    "issues": "https://src.run/cocoa-transformer-library/issues",
    "source": "https://src.run/cocoa-transformer-library/git"
  },
  "keywords": [ "cocoa-transformer-library", "cocoa", "transformer", "library", "rmf", "src-run" ],
  "authors": [
    {
      "name": "Rob Frawley 2nd",
      "email": "rmf@src.run",
      "homepage": "https://src.run/rmf",
      "role": "Project Lead"
    }
  ],
  "require": {
    "php": "~7.0"
  },
  "require-dev": {
    "codacy/coverage": "~1.0",
    "friendsofphp/php-cs-fixer": "~1.0",
    "fzaninotto/faker": "~1.6",
    "phpunit/phpunit": "~5.7",
    "psr/cache": "~1.0",
    "satooshi/php-coveralls": "~1.0",
    "sllh/php-cs-fixer-styleci-bridge": "~2.1",
    "symfony/cache": "~3.2"
  },
  "suggest": {
    "psr/cache": "Required for the cachable transformer implementation."
  },
  "autoload": {
    "psr-4": {
      "SR\\Cocoa\\Transformer\\": "lib/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SR\\Cocoa\\Transformer\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "bin-dir": "bin"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.7-dev"
    }
  }
}
